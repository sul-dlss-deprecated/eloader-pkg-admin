<table>
  <thead>
    <tr>
      <th colspan=2></th>
      <th>Status</th>
      <th>Package ID</th>
      <th>Package Name</th>
      <th>Vendor</th>
      <th>Date Entered</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @packages.each do |package| %>
      <tr>
        <td><%= link_to 'Activate', package, method: :update, package_status: 'Active', class: 'btn btn-sm btn-success btn-full' %></td>
        <td><%= link_to 'Deactivate', package, method: :update, package_status: 'Inactive', class: 'btn btn-sm btn-danger btn-full' %></td>
        <td><%= package.package_status %></td>
        <td><%= package.package_id %></td>
        <td><%= package.package_name %></td>
        <td><%= package.vendor_name %></td>
        <td><%= package.updated_at.to_formatted_s(:db) %></td>
        <td><%= link_to 'Edit', edit_package_path(package), class: 'btn btn-sm btn-default' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
