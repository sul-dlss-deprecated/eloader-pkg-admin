<table>
  <thead>
    <tr>
      <th><strong>String to Exclude from URL</strong></th>
      <th colspan='3'></th>
    </tr>
  </thead>

  <tbody>
    <% @url_exclusions.each do |url_exclusion| %>
      <tr>
        <td><%= url_exclusion.url_substring %></td>
        <td><%= link_to 'Show', url_exclusion %></td>
        <td><%= link_to 'Edit', edit_url_exclusion_path(url_exclusion) %></td>
        <td><%= link_to 'Destroy', url_exclusion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Url exclusion', new_url_exclusion_path, class: 'btn btn-sm btn-primary btn-full' %>
