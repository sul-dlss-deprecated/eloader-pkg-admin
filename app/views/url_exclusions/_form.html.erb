<%= form_for(@url_exclusion) do |f| %>
  <% if @url_exclusion.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@url_exclusion.errors.count, "error") %> prohibited this url_exclusion from being saved:</h2>

      <ul>
      <% @url_exclusion.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :url_substring, 'String to exclude from URL:' %><br>
    <%= link_to 'Show', @url_exclusion, class: 'btn btn-sm btn-default' %>
    <%= f.text_field :url_substring, size: 80 %>
  </div>
  <div class="actions">
    <%= f.submit class: 'btn btn-sm btn-primary' %>
  </div>
<% end %>
